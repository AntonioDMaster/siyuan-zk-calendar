{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
